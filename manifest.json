{
  "manifest_version": 2,
  "name": "TED Player Control",
  "description": "Shortcut to play/pause videos on TED.com using the spacebar.",
  "version": "0.1.1",
  "icons": {
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "permissions": [
    "http://www.ted.com/"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://www.ted.com/talks/*",
        "http://www.ted.com/playlists/*"
      ],
      "js": ["src/contentscript.js"]
    }
  ],
  "web_accessible_resources": [
    "src/script.js"
  ]
}
